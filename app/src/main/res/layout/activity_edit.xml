<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recyclerDieta"
    android:orientation="vertical"
    tools:context=".informacion_doctores.EditActivity">

    <TextView
        android:id="@+id/tipoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/txtTipoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Tipo"
        android:layout_marginTop="20dp"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/alimentosDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alimentos"
        android:layout_marginTop="20dp"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/txtAlimentosDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Alimentos"
        android:layout_marginTop="20dp"
        android:textSize="24dp"/>


    <TextView
        android:id="@+id/estaturaDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estatura"
        android:layout_marginTop="30dp"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/txtEstaturaDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Estatura"
        android:layout_marginTop="20dp"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/pesoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:layout_marginTop="20dp"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/txtPesoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Peso"
        android:layout_marginTop="20dp"
        android:textSize="24dp"/>

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Actualizar Datos"/>
</LinearLayout>