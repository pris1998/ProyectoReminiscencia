<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recyclerDieta"
    android:layout_margin="20dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tipoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtTipoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/alimentosDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alimentos"
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtAlimentosDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>


    <TextView
        android:id="@+id/estaturaDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estatura"
        android:layout_marginTop="30dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtEstaturaDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/pesoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtPesoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#222222"
        android:layout_marginTop="30dp"
        />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:id="@+id/btnEditar"
        android:layout_marginLeft="150dp"
        android:textAlignment="center" />

</LinearLayout>