<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recyclerDieta"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/tipoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtTipoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/alimentosDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alimentos"
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtAlimentosDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>


    <TextView
        android:id="@+id/estaturaDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estatura"
        android:layout_marginTop="30dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtEstaturaDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/pesoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/txtPesoDieta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="17dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditar"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:backgroundTint="@color/color_launch2"
        android:src="@drawable/ic_baseline_edit_24"
        app:closeIcon="@drawable/ic_baseline_edit_24"
        app:tint="@color/white" />


</LinearLayout>